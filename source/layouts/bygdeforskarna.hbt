<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bygdeforskarna - {{ title }}</title>

    <!-- Bootstrap -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" rel="stylesheet">

    <link href="/css/main.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body>
    <nav class="navbar navbar-default">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">Bygdeforskarna</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            {{#if navbar.about}}
            <li class="active"><a href="/om">Om</a></li>
            {{else}}
            <li><a href="/om">Om</a></li>
            {{/if}}
            {{#if navbar.contact}}
            <li class="active"><a href="/kontakt">Kontakt</a></li>
            {{else}}
            <li><a href="/kontakt">Kontakt</a></li>
            {{/if}}
            {{#if navbar.blog}}
            <li class="active"><a href="/blogg">Blogg</a></li>
            {{else}}
            <li><a href="/blogg">Blogg</a></li>
            {{/if}}
            {{#if navbar.hjelmsby}}
            <li class="active"><a href="/projekt/hjelmsby">Hjelmsby</a></li>
            {{else}}
            <li><a href="/projekt/hjelmsby">Hjelmsby</a></li>
            {{/if}}
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

    {{#if banner_image_large}}
    <div class="front-page banner b-lazy-three-sizes" data-src="{{banner_image_large}}" data-src-medium="{{banner_image_medium}}" data-src-small="{{banner_image_small}}"></div>
    {{/if}}
    <div class="main-content container">
      <div class="row">
        <div class="col-xs-12 main-content-col">
          {{{ contents }}}
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12">
          {{#if next}}
          <p class="pull-right">
            <a href="{{next.url}}">{{next.title}}</a>
          </p>
          {{/if}}
          {{#if previous}}
          <p>
            <a href="{{previous.url}}">{{previous.title}}</a>
          <p/>
          {{/if}}
        </div>
      </div>
    </div>
    <footer class="footer">
      <div class="container">
        <p class="pull-right">
          <a href="#">Back to top</a>
        </p>
        <p>
          Â© 2015 Bygdeforskarna
        </p>
      </div>
    </footer>
    <script src="https://code.jquery.com/jquery-2.1.4.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/blazy/1.4.1/blazy.min.js"></script>
    <script type="text/javascript">
      $(function () {
        var bLazy3 = new Blazy({
          selector: ".b-lazy-three-sizes",
          breakpoints: [{
            width: 420,
            src: "data-src-small"
          },{
            width: 768,
            src: "data-src-medium"
          }]
        });
        var bLazy1 = new Blazy({
          selector: ".b-lazy-one-size"
        });
      });
    </script>
  </body>
</html>
