/* Banner images
-------------------------------------------------- */
.banner
  height: 300px
  width: 100%
  background-size: cover
  float: left
  background-repeat: no-repeat
  background-position: center center
  margin-bottom: 40px

/* Stuff
-------------------------------------------------- */
.starter-template
  padding: 40px 15px
  text-align: center

.navbar
  margin-bottom: 0

p
  text-align: justify

img[class~=pull-right]
  margin: 10px 0px 10px 20px

img[class~=pull-left]
  margin: 10px 20px 10px 0px

.top-banner
  margin: 0px 0px 40px 0px

.front-page-news
  margin: 0 0 0 0

.front-page-news-col
  padding: 40px 0

.big-banner
  background-repeat:no-repeat
  background-position: center
  margin: 0 0 40px 0
  padding: 0

.main-content
  padding-top: 40px
  padding-bottom: 40px
  margin-bottom: 100px

/* Sticky footer styles
-------------------------------------------------- */
html
  position: relative
  min-height: 100%

body
  /* Margin bottom by footer height */
  margin-bottom: 60px

.footer
  position: absolute
  bottom: 0
  width: 100%
  /* Set the fixed height of the footer here */
  height: 60px
  background-color: #f8f8f8

footer .container p
  margin: 20px 0

/* Featurettes
-------------------------------------------------- */
.featurette-divider
  margin: 20px 0 40px 0 /* Space out the Bootstrap <hr> more */

/* Thin out the marketing headings */
.featurette-heading
  font-weight: 300
  line-height: 1
  letter-spacing: -1px

.featurette-text-box
  margin-bottom: 20px

/* Fancy item gallery
-------------------------------------------------- */
.fancy-item-gallery
  margin: 80px 0 40px 0

.fancy-item
  padding: 40px 0

/* RESPONSIVE CSS
-------------------------------------------------- */

@media (min-width: 768px)
  .featurette-heading
    font-size: 50px

  .banner
    height: 460px

  .front-page-news-col
    padding: 40px 40px

  .fancy-item
    padding: 40px 40px

@media (min-width: 992px)
  .featurette-heading
    margin-top: 60px

  .banner
    height: 550px

  .front-page-news-col
    padding: 40px 40px

  .fancy-item
    padding: 40px 40px
