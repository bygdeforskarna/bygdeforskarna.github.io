<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bygdeforskarna - {{ title }}</title>

    <!-- Bootstrap -->
    <link href="/bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">

    <link href="/css/main.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">Bygdeforskarna</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><a href="/">Hem</a></li>
            <li><a href="/om">Om</a></li>
            <li><a href="/kontakt">Kontakt</a></li>
            <li><a href="/blogg">Blogg</a></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Projekt <span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <li><a href="/projekt/hjelmsby">Hjelmsby</a></li>
              </ul>
            </li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

    {{#if banner_image}}
    <div class="container-fluid top-banner">
      <div class="row">
        <img class="img-responsive" src="{{banner_image}}" />
      </div>
    </div>
    {{/if}}
    <div class="main-content container">
      {{#if news1_image}}
      <div class="row front-page-news">
        <div class="col-md-4 col-xs-12 front-page-news-col text-center">
          <img class="img-responsive img-circle center-block" src="{{news1_image}}" alt="{{news1_image_alt}}" title="{{news1_image_title}}">
          <h2>{{news1_title}}</h2>
          <p class="text-center">{{news1_text}}</p>
          <a href="{{news1_link}}"><button class="btn btn-default">Mer information</button></a>
        </div>
        <div class="col-md-4 col-xs-12 front-page-news-col text-center">
          <img class="img-responsive img-circle center-block" src="{{news2_image}}" alt="{{news2_image_alt}}" title="{{news2_image_title}}">
          <h2>{{news2_title}}</h2>
          <p class="text-center">{{news2_text}}</p>
          <a href="{{news2_link}}"><button class="btn btn-default">Mer information</button></a>
        </div>
        <div class="col-md-4 col-xs-12 front-page-news-col text-center">
          <img class="img-responsive img-circle center-block" src="{{news3_image}}" alt="{{news3_image_alt}}" title="{{news3_image_title}}">
          <h2>{{news3_title}}</h2>
          <p class="text-center">{{news3_text}}</p>
          <a href="{{news3_link}}"><button class="btn btn-default">Mer information</button></a>
        </div>
      </div>
      {{/if}}
      <div class="row">
        <div class="col-xs-12">
          {{{ contents }}}
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12">
          {{#if next}}
          <p class="pull-right">
            <a href="/{{next.url}}">{{next.title}}</a>
          </p>
          {{/if}}
          {{#if previous}}
          <p>
            <a href="/{{previous.url}}">{{previous.title}}</a>
          <p/>
          {{/if}}
        </div>
      </div>

      <div class="row">
        <footer class="col-xs-12">
          <p class="pull-right">
            <a href="#">Back to top</a>
          </p>
          <p>
            Â© 2015 Bygdeforskarna
          </p>
        </footer>
      </div>
    </div>

    <script src="/bower_components/jquery/dist/jquery.min.js"></script>
    <script src="/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
  </body>
</html>